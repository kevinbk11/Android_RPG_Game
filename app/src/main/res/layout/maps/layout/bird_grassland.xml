<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/turnturnbird"
            android:onClick="turnTurnBird"
            android:layout_weight="1"/>
    <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="3"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/stone"
            android:onClick="littleStone"
            android:layout_marginStart="12dp" android:layout_weight="1"/>
</LinearLayout>
