<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        tools:context=".FightingPage"
        >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                <ImageView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/hp_background"
                        android:id="@+id/playerHpBackground"
                        />

                <ImageView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/hp_bar"
                        android:id="@+id/playerHpBar"
                        />

                <ImageView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/hp_frame"
                        android:id="@+id/playerHpFrame"
                        />

                <TextView
                        android:id="@+id/player_hptext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hp:0/0"
                        android:layout_below="@+id/playerHpBar"
                        />
                <TextView
                        android:id="@+id/player_mptext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/player_hptext"
                        android:text="mp:0/0"
                        />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                <ImageView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/hp_background"
                        android:id="@+id/monsterHpBackground1"
                        />

                <ImageView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/hp_bar"
                        android:id="@+id/monsterHpBar"
                        />

                <ImageView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/hp_frame"
                        android:id="@+id/monsterHpFrame"
                        />

                <TextView
                        android:id="@+id/monster_hptext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hp:0/0"
                        android:layout_below="@+id/monsterHpBar"
                        />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >



        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >





            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_weight="0"
                    android:id="@+id/linearLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/imageView3"
                                android:orientation="vertical"
                                android:id="@+id/linearLayout4"
                                >

                            <TextView
                                    style="@style/dmgtext"
                                    android:id="@+id/playerDmgText1"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />

                            <TextView
                                    style="@style/dmgtext"
                                    android:id="@+id/playerDmgText2"
                                    app:layout_constraintBottom_toTopOf="@+id/playerDmgText1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                        </LinearLayout>


                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:id="@+id/imageView3"
                                />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:id="@+id/linearLayout3"
                                android:orientation="vertical"
                                >

                            <TextView
                                    style="@style/dmgtext"
                                    android:id="@+id/monsterDmg1"
                                    app:layout_constraintEnd_toEndOf="@+id/monsterDmg2"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />

                            <TextView
                                    style="@style/dmgtext"
                                    android:id="@+id/monsterDmg2"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/monsterDmg1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />

                            <TextView
                                    style="@style/dmgtext"
                                    android:id="@+id/monsterDmg3"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/monsterDmg2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />

                            <TextView
                                    style="@style/dmgtext"
                                    android:id="@+id/monsterDmg4"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/monsterDmg3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />

                            <TextView
                                    style="@style/dmgtext"
                                    android:id="@+id/monsterDmg5"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/monsterDmg4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />

                            <TextView
                                    style="@style/dmgtext"
                                    android:id="@+id/monsterDmg6"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/monsterDmg5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />

                        </LinearLayout>

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:id="@+id/imageView"
                                tools:layout_editor_absoluteX="0dp"
                                tools:layout_editor_absoluteY="29dp"
                                />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>




            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            >

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/RV"
                tools:ignore="NestedWeights"
                />

        <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="攻擊"
                    android:onClick="normalAttack"
                    android:id="@+id/attackButton"
                    />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="道具"
                    android:id="@+id/itemButton"
                    />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="逃跑"
                    android:id="@+id/runButton"
                    />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>