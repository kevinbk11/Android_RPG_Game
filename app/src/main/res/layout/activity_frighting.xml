<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        tools:context=".Frighting">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/skill"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/skill"/>

</LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/skill"
            app:layout_constraintBottom_toBottomOf="parent">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/skilL_1"
                android:text="技能1"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/skilL_2"
                android:text="技能2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/skilL_3"
                android:text="技能3"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/skilL_4"
                android:text="技能4"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="技能5"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="100dp"
                android:layout_toEndOf="@+id/skilL_1"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="-20dp"
                android:layout_below="@+id/skilL_2"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>